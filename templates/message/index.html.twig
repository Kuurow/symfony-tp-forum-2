{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.texte }}</td>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}" class="btn btn-info my-2">Show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}" class="btn btn-dark my-2">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun message trouv√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('message_new') }}" class="btn btn-primary my-2">Create new</a>
{% endblock %}
