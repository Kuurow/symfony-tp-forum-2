{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ message.texte }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('message_index') }}" class="btn btn-secondary my-2">Back to list</a>

    <a href="{{ path('message_edit', {'id': message.id}) }}" class="btn btn-primary my-2">Edit</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
