{% extends 'base.html.twig' %}

{% block title %}Theme index{% endblock %}

{% block body %}
    <h1>Theme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.sujet }}</td>
                <td>{{ theme.date ? theme.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('theme_show', {'id': theme.id}) }}" class="btn btn-info my-2">Show</a>
                    <a href="{{ path('theme_edit', {'id': theme.id}) }}" class="btn btn-dark my-2">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun thème trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('theme_new') }}" class="btn btn-primary my-2">Create new</a>
{% endblock %}
