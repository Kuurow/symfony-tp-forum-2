                <td>{{ user.id }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.date ? user.date|date('Y-m-d') : '' }}</td>
                <td>{{ user.about }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info my-0">Show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary my-0">Edit</a>
