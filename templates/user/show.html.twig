{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>            
            <tr>
                <th>Date</th>
                <td>{{ user.date ? user.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ user.about }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-secondary my-2">Back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary my-2">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
